@{
    ViewData["Title"] = "Yardım";

    if (Context.Request.QueryString.Value is not null && Context.Request.QueryString.Value.Contains("?hash"))
    {
        Layout = null;
    }
}

<div class="mb-2">
	<div class="d-flex align-items-center">
		<nav aria-label="breadcrumb" class="mr-3">
			<h1 class="h6" data-value="title">@ViewData["Title"]</h1>
			<ol class="breadcrumb bg-transparent small p-0">
				<li class="breadcrumb-item"><a href="/" url-push="true">Dashboard</a></li>
				<li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
			</ol>
		</nav>
		<div class="ml-auto">
			<div class="d-flex justify-content-center">
				<div class="delete-item-block mr-3 d-none">
					<strong>0</strong> öğe seçili
					<button id="delete-item" type="button" class="btn btn-outline-danger ml-2" data-post-url="/api/note/delete/">
						<i class="far fa-trash-alt"></i> Sil
					</button>
				</div>
				<button type="button" class="btn btn-outline-secondary mr-3" data-target="grid-all-select" data-toggle="tooltip" data-placement="top" title="Tümü Seç">
					<i class="fas fa-check-square"></i>
				</button>
				<button type="button" class="btn btn-outline-secondary" data-target="grid-collapse" data-toggle="tooltip" data-placement="top" title="Daralt/Genişlet">
					<i class="fas fa-angle-double-up"></i>
				</button>
			</div>
		</div>
	</div>
</div>