@model ForgotPasswordDto
@{
	ViewData["Title"] = "Şifremi unuttum";

	if (Context.Request.QueryString.Value is not null && Context.Request.QueryString.Value.Contains("?hash"))
	{
		Layout = null;
	}
}
<form id="form-identity" action="/api/user/forgot-password/" method="post" autocomplete="off" class="mb-3 js-validate needs-validation" novalidate>
	<h1 class="h2">Şifreni Kurtar</h1>
	<p class="small">Bir e-posta almazsanız, lütfen spam klasörünüzü de kontrol ettiğinizden emin olun.</p>

	<div class="form-group mb-4">
		<label asp-for="@Model.Email">E-Posta</label>
		<input class="form-control" type="email" asp-for="@Model.Email" placeholder="e-posta@example.com" required>
		<small class="form-text invalid-feedback"></small>
	</div>

	<button class="btn btn-primary btn-block" type="submit">Onay Mail Gönder</button>
	@Html.AntiForgeryToken()
</form>

<p>
	Hesabınız yok mu? <a href="/account/singup/" url-push="true">Kayıt olun</a>
</p>