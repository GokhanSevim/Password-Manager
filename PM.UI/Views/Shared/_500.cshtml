@{
	ViewData["Title"] = "500 - Internal Server Error";

	if (Context.Request.QueryString.Value is not null && Context.Request.QueryString.Value.Contains("?hash"))
	{
		Layout = null;
	}
}

<main class="d-flex align-items-center justify-content-center w-100 h-100" role="main">
	<div class="container text-center">
		<div class="u-error">
			<span class="u-error__title">500</span>

			<div class="u-error__text">
				<h1 class="mb-2">Internal Server Error</h1>
				<a href="/" url-push="true">Dashboard</a>
			</div>
		</div>
	</div>

	<figure class="u-shape u-shape--top-right u-shape--position-1 d-none d-md-inline-block">
		<img src="/svg/shapes/shape-1.svg" alt="">
	</figure>
	<figure class="u-shape u-shape--centered u-shape--position-2 d-none d-md-inline-block">
		<img src="/svg/shapes/shape-2.svg" alt="">
	</figure>
	<figure class="u-shape u-shape--centered u-shape--position-3 d-none d-md-inline-block">
		<img src="/svg/shapes/shape-3.svg" alt="">
	</figure>
	<figure class="u-shape u-shape--bottom-left u-shape--position-4 d-none d-md-inline-block">
		<img src="/svg/shapes/shape-4.svg" alt="">
	</figure>
</main>